---
import Layout from "../layouts/Layout.astro"
import SectionContainer from "../components/SectionContainer.astro"
import Plus from "../components/icons/Plus.astro"
import Minus from "../components/icons/Minus.astro"

let roses = [
    {
        title: "Roja",
        description: "Te amo ‚ù§Ô∏è",
        img: "/Red.webp",
    },
    {
        title: "Anaranjada con Puntas Rojas",
        description: "Te deseo üî•",
        img: "/Orange.webp",
    },
    {
        title: "Morada",
        description: "Te admiro",
        img: "/Purple.webp",
    },
    { 
        title: "Azul",
        description: "Eres maravillosamente diferente",
        img: "/Blue.webp",
    },
    {
        title: "Blanca",
        description: "Lealtad",
        img: "/White.webp",
    },
    {
        title: "Amarilla",
